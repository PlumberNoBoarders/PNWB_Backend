<!DOCTYPE html>
<html>
<head>
<title>Admin</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
html,body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}
.loop{
  margin: 1.5%;
  width: 30%;
}
@media screen and (max-width: 600px) {
.loop{
  margin: 1.5%;
  width: 100%;}
}
</style>
</head>
<body class="w3-light-grey">

<!-- Top container -->
<div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
  <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey" onclick="w3_open();"><i class="fa fa-bars"></i>  Menu</button>
  <span class="w3-bar-item w3-right">Logo</span>
</div>

<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar">
  <div class="w3-container">
    <h5>Dashboard</h5>
  </div>
  <div class="w3-bar-block">
    <p style="margin: 1%;width: 10%;aspect-ratio: 1/1;" id="close"  class=" w3-button] w3-round w3-hide-small w3-red w3-hover-black" onclick="w3_close()" title="close menu"><i class="fa fa-remove fa-fw"></i>  </p>
    <p style="margin: 0%;" 
    id="Overview" class="w3-bar-item w3-button w3-padding "><a href="/admin/authenticated"> Overview </a></p>
    <p   id="proof" style="margin: 0%;" class="w3-bar-item w3-button w3-padding"><a href="/admin/proof">  Proof from Advertisers</a></p>
    <p   id="Advetisers" style="margin: 0%;" class="w3-bar-item w3-button w3-padding  w3-blue"><a href="/admin/Advertisers"> Adveriser's contact list and money </a></p>
    <p id="adverts" style="margin: 0%;" class="w3-bar-item w3-button w3-padding"><a href="/admin/adverts"> Adverts</a></p>
    <p  id="money" style="margin: 0%;" class="w3-bar-item w3-button w3-padding"><a href="/admin/money"> Update money earned </a></p>
  </div>
</nav>


<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:300px;margin-top:43px;">

  <!-- Header -->
  <header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
  </header>
  <div id="components">
  <div id="ADVERTISERS" style="display: block;flex-direction: row;flex-direction: row;flex-wrap: wrap;justify-content: space-around" class="w3-row-padding w3-margin-bottom w3-animate-opacity">
    <h3 style="font-weight: 800;text-align: left;">ADVERTISERS This month</h3>
    <br/>
    <ol style="width: 100%;" class="w3-ul w3-card-4  w3-round">
     <% for (let index = 0; index < activated_Accounts.length; index++) {
      const element = activated_Accounts[index];%>
      <li class="w3-display-container"><%if(!element.Alegible_For_Growth_Program){%><button onclick="approveP('<%=element.userName%>')" class="w3-button w3-round w3-green w3-hover-black">Approve</button><%}else{%><button  class="w3-button w3-round w3-green w3-hover-black">Approved</button><%}%>  <%=element.userName%>  tel : <a href="tel:<%=element.phoneNumber%>"> <%=element.phoneNumber%> </a> <span style="padding-left:5% ;" class="w3-display-center">Days:<%=element.Whatsapp%></span> <span style="padding-left:5% ;" class="w3-display-center">Money:<%=element.Whatsapp*170%></span> <span style="padding-left:10% ;" class="w3-display-center">MOMO/airtelMoney:<%=element.paymentNumber%></span> <span onclick="this.parentElement.style.display='none';deleteUser()" class="w3-button w3-transparent w3-display-right">&times;</span></li>
     <%}%> 
   </ol>
  </div>
 
  </div>
<script>
const approveP=(userName)=>{
fetch(`http://<%=link%>/approveUser`, {
 method: "POST",
 mode: "cors",
 cache: "no-cache",
 credentials: "same-origin",
 headers: {
  'Accept': 'application/json',
  'Content-Type': 'application/json'
 },
 redirect: "follow",
 referrerPolicy: "no-referrer", 
 body:  JSON.stringify({userName:userName}),
 }).then(response => {
 return response.json()})
 .then(data => {
   window.location.reload();
})
 .catch(error => console.error(error));
}
const deleteAdvert=(url)=>{
  
  fetch(`http://<%=link%>/deleteAdvert`, {
   method: "POST",
   mode: "cors",
   cache: "no-cache",
   credentials: "same-origin",
   headers: {
    'Accept': 'application/json',
    'Content-Type': 'application/json'
   },
   redirect: "follow",
   referrerPolicy: "no-referrer", 
   body:  JSON.stringify({deleteUrl:url}),
 }).then(response => {
   return response.json()})
   .then(data => {
       console.log(data);})
   .catch(error => console.error(error));
}
var mySidebar = document.getElementById("mySidebar");
var overlayBg = document.getElementById("myOverlay");
function w3_open() {
  if (mySidebar.style.display === 'block') {
    mySidebar.style.display = 'none';
    overlayBg.style.display = "none";
  } else {
    mySidebar.style.display = 'block';
    overlayBg.style.display = "block";
  }
}
function w3_close() {
  mySidebar.style.display = "none";
  overlayBg.style.display = "none";
}
</script>

</body>
</html>
