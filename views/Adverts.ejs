<!DOCTYPE html>
<html>
<head>
<title>Admin</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
html,body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}
.loop{
  margin: 1.5%;
  width: 30%;
}
@media screen and (max-width: 600px) {
.loop{
  margin: 1.5%;
  width: 100%;}
}
</style>
</head>
<body class="w3-light-grey">

<!-- Top container -->
<div class="w3-bar w3-top w3-black w3-large" style="z-index:4">
  <button class="w3-bar-item w3-button w3-hide-large w3-hover-none w3-hover-text-light-grey" onclick="w3_open();"><i class="fa fa-bars"></i>  Menu</button>
  <span class="w3-bar-item w3-right">Logo</span>
</div>

<!-- Sidebar/menu -->
<nav class="w3-sidebar w3-collapse w3-white w3-animate-left" style="z-index:3;width:300px;" id="mySidebar">
  <div class="w3-container">
    <h5>Dashboard</h5>
  </div>
  <div class="w3-bar-block">
    <p style="margin: 1%;width: 10%;aspect-ratio: 1/1;" id="close"  class=" w3-button] w3-round w3-hide-small w3-red w3-hover-black" onclick="w3_close()" title="close menu"><i class="fa fa-remove fa-fw"></i>  </p>
    <p style="margin: 0%;" 
    id="Overview" class="w3-bar-item w3-button w3-padding"><a href="/admin/authenticated"> Overview </a></p>
    <p   id="proof" style="margin: 0%;" class="w3-bar-item w3-button w3-padding"><a href="/admin/proof">  Proof from Advertisers</a></p>
    <p   id="Advetisers" style="margin: 0%;" class="w3-bar-item w3-button w3-padding"><a href="/admin/Advertisers"> Adveriser's contact list and money </a></p>
    <p id="adverts" style="margin: 0%;" class="w3-bar-item w3-button w3-padding  w3-blue"><a href="/admin/adverts"> Adverts</a></p>
    <p  id="money" style="margin: 0%;" class="w3-bar-item w3-button w3-padding"><a href="/admin/money"> Update money earned </a></p>
  </div>
</nav>


<!-- Overlay effect when opening sidebar on small screens -->
<div class="w3-overlay w3-hide-large w3-animate-opacity" onclick="w3_close()" style="cursor:pointer" title="close side menu" id="myOverlay"></div>

<!-- !PAGE CONTENT! -->
<div class="w3-main" style="margin-left:300px;margin-top:43px;">

  <!-- Header -->
  <header class="w3-container" style="padding-top:22px">
    <h5><b><i class="fa fa-dashboard"></i> My Dashboard</b></h5>
  </header>
  <div id="components">
  <div id="ADVERTS" style="display: flex;flex-direction: row;flex-direction: row;flex-wrap: wrap;text-align: center;" class="w3-row-padding w3-margin-bottom w3-animate-opacity">
    <h3 style="font-weight: 800;text-align: left;">ADVERTS</h3>
    <div id="advert" style="width: 100%;display: flex;flex-direction: row;flex-wrap: wrap;justify-content: space-around;">
      <% for (let index = 0; index < adverts.length; index++) {
        const element = adverts[index];%>
        <div class="w3-card" style="width: 30%">
        <img src='http://<%=link+element['advertUrl']%>' class="w3-margin-bottom" class='w3-round w3-image' style="width: 100%;heigth:100%" alt="">
        <button onclick="deleteAdvert(`<%=element['advertUrl']%>`)" class="w3-button w3-red w3-round w3-margin">Delete</button>
      </div>
       <%}%> 
    <img onclick="(()=>{ const file=document.createElement('input');file.type='file';file.accept='image/*';file.click();file.onchange=(e)=>{let img=document.createElement('img'); let fileUrl=window.URL.createObjectURL(e.target.files[0]);img.src=fileUrl;img.className='w3-margin-bottom';img.style='width:30%;object-fit:cover';document.getElementById('advert').insertAdjacentElement('afterbegin',img);blobToBase64(e.target.files[0]).then((results)=>{uploadAdvert(results)})}})()" src="/public/Add.png" class="w3-margin-bottom" style="width: 30%;" alt="">
   </div>
  </div>
  </div>
<script>
const deleteAdvert=(url)=>{
  
  fetch(`http://<%=link%>/deleteAdvert`, {
   method: "POST",
   mode: "cors",
   cache: "no-cache",
   credentials: "same-origin",
   headers: {
    'Accept': 'application/json',
    'Content-Type': 'application/json'
   },
   redirect: "follow",
   referrerPolicy: "no-referrer", 
   body:  JSON.stringify({deleteUrl:url}),
 }).then(response => {
   return response.json()})
   .then(data => {
       console.log(data);})
  .catch(error => console.error(error));
}
const  uploadAdvert=(imgData)=>{
  const d = new Date();
            fetch(`http://<%=link%>/uploadAdvert`, {
             method: "POST",
             mode: "cors",
             cache: "no-cache",
             credentials: "same-origin",
             headers: {
              'Accept': 'application/json',
              'Content-Type': 'application/json'
             },
             redirect: "follow",
             referrerPolicy: "no-referrer", 
             body:  JSON.stringify({data:imgData,imgFolder:`imgNow${d.getSeconds()}`}),
           }).then(response => {
             return response.json()})
             .then(data => {
                 console.log(data);})
            .catch(error => console.error(error));
          }
function blobToBase64(blob) {return new Promise((resolve, _) => { const reader = new FileReader();reader.onloadend = () => resolve(reader.result); reader.readAsDataURL(blob); })}
var mySidebar = document.getElementById("mySidebar");

// Get the DIV with overlay effect
var overlayBg = document.getElementById("myOverlay");

// Toggle between showing and hiding the sidebar, and add overlay effect
function w3_open() {
  if (mySidebar.style.display === 'block') {
    mySidebar.style.display = 'none';
    overlayBg.style.display = "none";
  } else {
    mySidebar.style.display = 'block';
    overlayBg.style.display = "block";
  }
}

// Close the sidebar with the close button
function w3_close() {
  mySidebar.style.display = "none";
  overlayBg.style.display = "none";
}
</script>

</body>
</html>
